// Prisma Schema for CELPIP Auth

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String    @unique
  emailVerified   DateTime?
  password        String?
  image           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  accounts        Account[]
  sessions        Session[]
  verificationTokens VerificationToken[]
  passwordResets  PasswordReset[]
  practices       Practice[]
  writingAnalyses WritingAnalysis[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_resets")
}

// User practice history (for syncing progress)
model Practice {
  id          String   @id @default(cuid())
  userId      String
  taskType    String   // 'task1' or 'task2'
  wordCount   Int
  score       Float
  timeMinutes Int
  content     String?  @db.Text
  feedback    Json?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("practices")
}

// AI Writing Analysis (for weakness tracking & progress)
model WritingAnalysis {
  id            String   @id @default(cuid())
  oderId        String   @unique @default(cuid()) // for localStorage sync
  sessionId     String?  // anonymous session tracking
  userId        String?  // if logged in
  taskType      String   // 'task1' or 'task2'
  wordCount     Int
  aiScore       Int      // 1-12
  content       String   @db.Text
  
  // Weakness categories (count of issues)
  grammarIssues     Int @default(0)
  vocabularyIssues  Int @default(0)
  structureIssues   Int @default(0)
  contentIssues     Int @default(0)
  styleIssues       Int @default(0)
  
  // Specific patterns detected
  hasContractions   Boolean @default(false)
  hasOrgWords       Boolean @default(true)
  hasSpecificDetails Boolean @default(false)
  hasProperClosing  Boolean @default(false)
  
  // Raw AI feedback for reference
  sentenceFeedback  Json?
  scoreFeedback     Json?
  
  createdAt     DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([sessionId, createdAt])
  @@map("writing_analyses")
}

// User subscription plan (keyed by Supabase auth user ID)
model UserPlan {
  id        String   @id @default(cuid())
  userId    String   @unique  // Supabase auth user.id
  plan      String   @default("free") // 'free' | 'pro'
  expiresAt DateTime? // null = never expires (lifetime or free)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_plans")
}

// Quiz score tracking (for technique guide quizzes)
model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  sectionId String   // 'listening', 'writing', 'reading', 'speaking'
  moduleId  String   // e.g. 'task1', 'csf', 'truthTrio'
  score     Int
  total     Int
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([userId, sectionId, moduleId])
  @@map("quiz_attempts")
}
